= form_with(model: order, local: true) do |form|
  - if order.errors.any?
    #error_explanation
      %h2
        = pluralize(order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - order.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :number
    = form.number_field :number, id: :order_number
  .field
    = form.label :date
    -# creates easier input for dates
    = form.date_field :date, id: :order_date
  .field
    = form.label :price
    = form.text_field :price, id: :order_price
  .actions
    = form.submit
